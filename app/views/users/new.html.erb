<h3>Registration</h3>

<ul>
  <% @user.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>

<%= form_for @user do |f| %>
  <%= f.label :username %>:
  <%= f.text_field :username %>
  <br>
  <%= f.label :email %>:
  <%= f.text_field :email %>
  <br>
  <%= f.label :first_name %>:
  <%= f.text_field :first_name %>
  <br>
  <%= f.label :last_name %>:
  <%= f.text_field :last_name %>
  <%= f.hidden_field :image_url, value: "http://lorempixel.com/200/200/sports/" %>:
  <br>
  <%= f.label :password %>:
  <%= f.password_field :password %>(*Must be at least 6 characters)
  <br>
  <%= f.label :password_confirmation %>:
  <%= f.password_field :password_confirmation %>
  <br>

  <%= f.submit %>
<% end %>
